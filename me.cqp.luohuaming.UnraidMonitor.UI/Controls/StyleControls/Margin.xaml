<UserControl
    x:Class="me.cqp.luohuaming.UnraidMonitor.UI.Controls.StyleControls.Margin"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:me.cqp.luohuaming.UnraidMonitor.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:me.cqp.luohuaming.UnraidMonitor.UI.Controls.StyleControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <hc:UniformSpacingPanel Orientation="Vertical" Spacing="10">
        <controls:ControlWithTitle Title="左" TitleWidth="{StaticResource GlobalTitleWidth}">
            <TextBox Text="{Binding Thickness.Left, RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor}, Mode=TwoWay}" />
        </controls:ControlWithTitle>
        <controls:ControlWithTitle Title="右" TitleWidth="{StaticResource GlobalTitleWidth}">
            <TextBox Text="{Binding Thickness.Right, RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor}, Mode=TwoWay}" />
        </controls:ControlWithTitle>
        <controls:ControlWithTitle Title="上" TitleWidth="{StaticResource GlobalTitleWidth}">
            <TextBox Text="{Binding Thickness.Top, RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor}, Mode=TwoWay}" />
        </controls:ControlWithTitle>
        <controls:ControlWithTitle Title="下" TitleWidth="{StaticResource GlobalTitleWidth}">
            <TextBox Text="{Binding Thickness.Bottom, RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor}, Mode=TwoWay}" />
        </controls:ControlWithTitle>
    </hc:UniformSpacingPanel>
</UserControl>
