<hc:Window
    x:Class="me.cqp.luohuaming.UnraidMonitor.UI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:me.cqp.luohuaming.UnraidMonitor.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="样式编辑器"
    Width="1024"
    Height="680"
    d:DataContext="{d:DesignInstance Type=local:MainWindow,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="680"
    d:DesignWidth="1024"
    Background="{DynamicResource RegionBrush}"
    Closing="Window_Closing"
    Icon="pack://application:,,,/me.cqp.luohuaming.UnraidMonitor.UI;component/Resources/Images/dashboard.png"
    Loaded="Window_Loaded"
    Style="{StaticResource WindowWin10}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="400" />
        </Grid.ColumnDefinitions>
        <TextBlock
            HorizontalAlignment="Left"
            Style="{StaticResource TextBlockLarge}"
            Text="Unraid Monitor" />
        <Grid Grid.Row="1" Margin="0,20,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock
                HorizontalAlignment="Left"
                Style="{StaticResource TextBlockTitle}"
                Text="最近打开的样式" />
            <TextBlock
                x:Name="EmptyHint"
                Grid.Row="1"
                Margin="0,10,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top">
                什么都没有～(￣▽￣～)
            </TextBlock>
            <ListBox
                x:Name="StyleHistoryListBox"
                Grid.Row="1"
                Margin="0,10,0,0"
                Background="Transparent"
                BorderBrush="Transparent"
                ItemsSource="{Binding StyleHistories}"
                PreviewMouseUp="StyleHistoryListBoxItem_MouseUp">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        <Setter Property="Cursor" Value="Hand" />
                        <Setter Property="Padding" Value="10" />
                        <Setter Property="Background" Value="Transparent" />
                    </Style>
                </ListBox.ItemContainerStyle>

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid
                            Height="40"
                            HorizontalAlignment="Stretch"
                            Background="Transparent">
                            <Grid.ContextMenu>
                                <ContextMenu Name="StyleContextMenu">
                                    <MenuItem Click="OpenStyleDirectory_Click" Header="打开文件所在位置" />
                                    <Separator />
                                    <MenuItem Click="RemoveFromList_Click" Header="从列表中删除" />
                                </ContextMenu>

                            </Grid.ContextMenu>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Border Margin="0,3,10,0">
                                <Path
                                    Width="20"
                                    Height="20"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Data="{StaticResource StyleGeometry}"
                                    Fill="{DynamicResource PrimaryBrush}"
                                    RenderTransformOrigin="0.5,0.5"
                                    Stretch="Uniform"
                                    StrokeThickness="1">
                                    <Path.RenderTransform>
                                        <TransformGroup>
                                            <TranslateTransform />
                                        </TransformGroup>
                                    </Path.RenderTransform>
                                </Path>
                            </Border>
                            <TextBlock
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                Style="{StaticResource TextBlockDefaultBold}"
                                Text="{Binding FileName}" />
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                Style="{StaticResource TextBlockDefault}"
                                Text="{Binding FullPath}"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="WrapWithOverflow" />
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="2"
                                HorizontalAlignment="Right"
                                Style="{StaticResource TextBlockDefault}"
                                Text="{Binding DateTime, StringFormat=yyyy-MM-dd HH:mm:ss}" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
        <Grid
            Grid.Row="1"
            Grid.Column="1"
            Margin="20,20,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <TextBlock
                HorizontalAlignment="Left"
                Style="{StaticResource TextBlockTitle}"
                Text="开始使用" />
            <Button
                Name="OpenFileButton"
                Grid.Row="1"
                Height="75"
                Margin="0,10,0,0"
                HorizontalAlignment="Stretch"
                Click="OpenFileButton_Click">
                <Grid Width="350">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Border Margin="0,4,5,0">
                        <Path
                            Width="20"
                            Height="20"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Data="{StaticResource OpenFileGeometry}"
                            Fill="{DynamicResource PrimaryBrush}"
                            RenderTransformOrigin="0.5,0.5"
                            Stretch="Uniform"
                            StrokeThickness="1">
                            <Path.RenderTransform>
                                <TransformGroup>
                                    <TranslateTransform />
                                </TransformGroup>
                            </Path.RenderTransform>
                        </Path>
                    </Border>
                    <Grid
                        Grid.Column="1"
                        Height="60"
                        HorizontalAlignment="Left">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            HorizontalAlignment="Left"
                            Style="{StaticResource TextBlockTitle}"
                            Text="打开本地样式" />
                        <TextBlock
                            Grid.Row="1"
                            Margin="0,2,0,0"
                            HorizontalAlignment="Left"
                            Text="打开本地已经保存的样式文件" />
                    </Grid>
                </Grid>
            </Button>
            <Button
                Name="CreateFileButton"
                Grid.Row="2"
                Height="75"
                Margin="0,5,0,0"
                HorizontalAlignment="Stretch"
                Click="CreateFileButton_Click">
                <Grid Width="350">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Border Margin="0,4,5,0">
                        <Path
                            Width="20"
                            Height="20"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Data="{StaticResource CreateFileGeometry}"
                            Fill="{DynamicResource PrimaryBrush}"
                            RenderTransformOrigin="0.5,0.5"
                            Stretch="Uniform"
                            StrokeThickness="1">
                            <Path.RenderTransform>
                                <TransformGroup>
                                    <TranslateTransform />
                                </TransformGroup>
                            </Path.RenderTransform>
                        </Path>
                    </Border>
                    <Grid
                        Grid.Column="1"
                        Height="60"
                        HorizontalAlignment="Left">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            HorizontalAlignment="Left"
                            Style="{StaticResource TextBlockTitle}"
                            Text="创建新的样式" />
                        <TextBlock
                            Grid.Row="1"
                            Margin="0,2,0,0"
                            HorizontalAlignment="Left"
                            Text="从一个空白画布开始创建新的样式" />
                    </Grid>
                </Grid>
            </Button>
            <Button
                Name="SettingButton"
                Grid.Row="3"
                Height="75"
                Margin="0,5,0,0"
                HorizontalAlignment="Stretch"
                Click="SettingButton_Click">
                <Grid Width="350">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Border Margin="0,4,5,0">
                        <Path
                            Width="20"
                            Height="20"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Data="{StaticResource SettingGeometry}"
                            Fill="{DynamicResource PrimaryBrush}"
                            RenderTransformOrigin="0.5,0.5"
                            Stretch="Uniform"
                            StrokeThickness="1">
                            <Path.RenderTransform>
                                <TransformGroup>
                                    <TranslateTransform />
                                </TransformGroup>
                            </Path.RenderTransform>
                        </Path>
                    </Border>
                    <Grid
                        Grid.Column="1"
                        Height="60"
                        HorizontalAlignment="Left">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            HorizontalAlignment="Left"
                            Style="{StaticResource TextBlockTitle}"
                            Text="打开配置窗口" />
                        <TextBlock
                            Grid.Row="1"
                            Margin="0,2,0,0"
                            HorizontalAlignment="Left"
                            Text="设置插件的各个配置，以及监控API的间隔" />
                    </Grid>

                </Grid>
            </Button>
        </Grid>
    </Grid>
</hc:Window>