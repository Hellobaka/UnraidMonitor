<Window
    x:Class="me.cqp.luohuaming.UnraidMonitor.UI.Windows.AlarmEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="clr-namespace:me.cqp.luohuaming.UnraidMonitor.UI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:me.cqp.luohuaming.UnraidMonitor.UI.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Name="AlarmEditorWindow"
    Title="编辑报警条件"
    Width="500"
    Height="560"
    d:DataContext="{d:DesignInstance Type=local:AlarmEditor}"
    Loaded="Window_Loaded"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Resources>
        <converter:AlarmFormatWidthConverter x:Key="AlarmFormatWidthConverter" />
        <converter:EnumToItemsSourceConverter x:Key="EnumToItemsSourceConverter" />
        <converter:EnumDescriptionConverter x:Key="EnumDescriptionConverter" />
        <converter:TimeSpanToDateTimeConverter x:Key="TimeSpanToDateTimeConverter" />
        <converter:ItemTypeToStringConverter x:Key="ItemTypeToStringConverter" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Visible">
            <Grid x:Name="Container" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock VerticalAlignment="Center" Text="启用：" />
                    <ToggleButton
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        hc:VisualElement.HighlightBrush="{DynamicResource PrimaryBrush}"
                        IsChecked="{Binding AlarmInstance.Enabled, Mode=TwoWay}"
                        Style="{StaticResource ToggleButtonSwitch}" />
                </Grid>
                <Grid Grid.Row="1" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock VerticalAlignment="Center" Text="名称：" />
                    <TextBox Grid.Column="1" Text="{Binding AlarmInstance.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>
                <Grid Grid.Row="2" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock VerticalAlignment="Center" Text="报警类型：" />
                    <ComboBox
                        Grid.Column="1"
                        ItemsSource="{Binding AlarmTypeValues}"
                        SelectedItem="{Binding AlarmType, Mode=TwoWay}"
                        SelectionChanged="AlarmType_SelectionChanged">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={StaticResource EnumDescriptionConverter}}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </Grid>
                <Grid Grid.Row="3" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock VerticalAlignment="Center" Text="可重复：" />
                    <ToggleButton
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        hc:VisualElement.HighlightBrush="{DynamicResource PrimaryBrush}"
                        IsChecked="{Binding AlarmInstance.CanDuplicateAlarmPost, Mode=TwoWay}"
                        Style="{StaticResource ToggleButtonSwitch}" />
                </Grid>
                <Grid Grid.Row="4" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock VerticalAlignment="Center" Text="特定时段：" />
                    <ToggleButton
                        x:Name="TimeRangeSwitch"
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        hc:VisualElement.HighlightBrush="{DynamicResource PrimaryBrush}"
                        IsChecked="{Binding AlarmInstance.IsTimeRangeAlarm, Mode=TwoWay}"
                        Style="{StaticResource ToggleButtonSwitch}" />
                </Grid>
                <Grid Grid.Row="5" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock VerticalAlignment="Center" Text="开始时段：" />
                    <hc:TimePicker
                        Grid.Column="1"
                        IsEnabled="{Binding IsChecked, ElementName=TimeRangeSwitch}"
                        SelectedTime="{Binding AlarmInstance.StartTime, Converter={StaticResource TimeSpanToDateTimeConverter}, Mode=TwoWay}"
                        Style="{StaticResource TimePickerPlus}">
                        <hc:TimePicker.Clock>
                            <hc:ListClock />
                        </hc:TimePicker.Clock>
                    </hc:TimePicker>
                </Grid>
                <Grid Grid.Row="6" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock VerticalAlignment="Center" Text="结束时段：" />
                    <hc:TimePicker
                        Grid.Column="1"
                        IsEnabled="{Binding IsChecked, ElementName=TimeRangeSwitch}"
                        SelectedTime="{Binding AlarmInstance.EndTime, Converter={StaticResource TimeSpanToDateTimeConverter}, Mode=TwoWay}"
                        Style="{StaticResource TimePickerPlus}">
                        <hc:TimePicker.Clock>
                            <hc:ListClock />
                        </hc:TimePicker.Clock>
                    </hc:TimePicker>
                </Grid>
                <Grid Grid.Row="7" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock VerticalAlignment="Center" Text="最小间隔：" />
                    <hc:TimePicker
                        Grid.Column="1"
                        SelectedTime="{Binding AlarmInstance.AlarmInterval, Converter={StaticResource TimeSpanToDateTimeConverter}, Mode=TwoWay}"
                        Style="{StaticResource TimePickerPlus}">
                        <hc:TimePicker.Clock>
                            <hc:ListClock />
                        </hc:TimePicker.Clock>
                    </hc:TimePicker>
                </Grid>
                <Grid Grid.Row="8" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock VerticalAlignment="Center" Text="监控类别：" />
                    <ComboBox
                        Grid.Column="1"
                        ItemsSource="{Binding BindingItemValues}"
                        SelectedItem="{Binding AlarmItemType, Mode=TwoWay, Converter={StaticResource ItemTypeToStringConverter}}"
                        SelectionChanged="ItemType_SelectionChanged">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={StaticResource EnumDescriptionConverter}}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </Grid>
                <Grid Grid.Row="9" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock VerticalAlignment="Center" Text="监控属性：" />
                    <ComboBox
                        Grid.Column="1"
                        ItemsSource="{Binding BindingProperties}"
                        SelectedItem="{Binding AlarmPropertyName, Mode=TwoWay}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Key}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </Grid>
                <Grid Grid.Row="10" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <TextBlock VerticalAlignment="Center" Text="激活文本模板：" />
                    <TextBox
                        Name="AlarmPostText"
                        Grid.Column="1"
                        MaxWidth="{Binding Width, Converter={StaticResource AlarmFormatWidthConverter}, ElementName=AlarmEditorWindow}"
                        AcceptsReturn="True"
                        MaxLines="65535"
                        Text="{Binding AlarmInstance.AlarmNotifyFormat, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        TextWrapping="Wrap" />
                    <hc:UniformSpacingPanel
                        Name="AlarmPostFormatContainer"
                        Grid.Row="1"
                        Grid.Column="1"
                        Width="{Binding Width, Converter={StaticResource AlarmFormatWidthConverter}, ElementName=AlarmEditorWindow}"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Left"
                        ChildWrapping="Wrap"
                        Spacing="10" />
                </Grid>
                <Grid Grid.Row="11" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <TextBlock VerticalAlignment="Center" Text="恢复文本模板：" />
                    <TextBox
                        Name="AlarmRecoveryText"
                        Grid.Column="1"
                        MaxWidth="{Binding Width, Converter={StaticResource AlarmFormatWidthConverter}, ElementName=AlarmEditorWindow}"
                        AcceptsReturn="True"
                        MaxLines="65535"
                        Text="{Binding AlarmInstance.RecoverNotifyFormat, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        TextWrapping="Wrap" />
                    <hc:UniformSpacingPanel
                        Name="AlarmRecoveryFormatContainer"
                        Grid.Row="1"
                        Grid.Column="1"
                        Width="{Binding Width, Converter={StaticResource AlarmFormatWidthConverter}, ElementName=AlarmEditorWindow}"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Left"
                        ChildWrapping="Wrap"
                        Spacing="10" />
                </Grid>
                <Grid
                    x:Name="RangeAlarmPropertyContainer"
                    Grid.Row="12"
                    Margin="0,10,0,0"
                    Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="90" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock VerticalAlignment="Center" Text="区间内报警：" />
                        <ToggleButton
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            hc:VisualElement.HighlightBrush="{DynamicResource PrimaryBrush}"
                            IsChecked="{Binding AlarmInstance.AlarmInside, Mode=TwoWay}"
                            Style="{StaticResource ToggleButtonSwitch}" />
                    </Grid>
                    <Grid Grid.Row="1" Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="90" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock VerticalAlignment="Center" Text="区间最小值：" />
                        <TextBox Grid.Column="1" Text="{Binding AlarmInstance.Min, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                    </Grid>
                    <Grid Grid.Row="2" Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="90" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock VerticalAlignment="Center" Text="区间最大值：" />
                        <TextBox Grid.Column="1" Text="{Binding AlarmInstance.Max, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                    </Grid>
                    <Grid Grid.Row="3" Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="90" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock VerticalAlignment="Center" Text="最大持续时长：" />
                        <hc:TimePicker
                            Grid.Column="1"
                            SelectedTime="{Binding AlarmInstance.ThresholdTimeSpan, Converter={StaticResource TimeSpanToDateTimeConverter}, Mode=TwoWay}"
                            Style="{StaticResource TimePickerPlus}">
                            <hc:TimePicker.Clock>
                                <hc:ListClock />
                            </hc:TimePicker.Clock>
                        </hc:TimePicker>
                    </Grid>
                </Grid>
                <Grid
                    x:Name="RateOfChangeAlarmPropertyContainer"
                    Grid.Row="12"
                    Margin="0,10,0,0"
                    Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="90" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock VerticalAlignment="Center" Text="最大变化量：" />
                        <TextBox Grid.Column="1" Text="{Binding AlarmInstance.MaxDelta, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                    </Grid>
                </Grid>
                <Grid
                    x:Name="ThresholdAlarmPropertyContainer"
                    Grid.Row="12"
                    Margin="0,10,0,0"
                    Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="90" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock VerticalAlignment="Center" Text="阈值：" />
                        <TextBox Grid.Column="1" Text="{Binding AlarmInstance.Threshold, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                    </Grid>
                    <Grid Grid.Row="1" Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="90" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock VerticalAlignment="Center" Text="计算方式：" />
                        <ComboBox
                            Grid.Column="1"
                            ItemsSource="{Binding BoolConditionValues}"
                            SelectedItem="{Binding AlarmInstance.ThresholdBoolCondition, Mode=TwoWay}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Converter={StaticResource EnumDescriptionConverter}}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </Grid>
                    <Grid Grid.Row="2" Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="90" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock VerticalAlignment="Center" Text="最大持续时长：" />
                        <hc:TimePicker
                            Grid.Column="1"
                            SelectedTime="{Binding AlarmInstance.ThresholdTimeSpan, Converter={StaticResource TimeSpanToDateTimeConverter}, Mode=TwoWay}"
                            Style="{StaticResource TimePickerPlus}">
                            <hc:TimePicker.Clock>
                                <hc:ListClock />
                            </hc:TimePicker.Clock>
                        </hc:TimePicker>
                    </Grid>
                </Grid>
            </Grid>
        </ScrollViewer>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button
                Grid.Column="0"
                Margin="5"
                HorizontalAlignment="Stretch"
                Click="Save_Click"
                Content="保存"
                Style="{StaticResource ButtonPrimary}" />
            <Button
                Grid.Column="1"
                Margin="5"
                HorizontalAlignment="Stretch"
                Click="Cancel_Click"
                Content="取消" />
        </Grid>
    </Grid>
</Window>
